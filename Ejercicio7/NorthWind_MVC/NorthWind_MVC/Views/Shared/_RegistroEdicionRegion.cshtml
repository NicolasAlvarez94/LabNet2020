@model Entidades.Region

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>



<div class="form-group">
    <label>ID:</label>
    @Html.TextBoxFor(model => model.RegionID, new { @readonly = "readonly", @class = "form-control" })
</div>
<div class="form-group">
    <label for="descripcion">Descripcion:</label>
    @Html.TextBoxFor(model => model.RegionDescription, new { @class = "form-control", id = "descripcion" })
    <p id="ErrorDescripcion" class="text-danger"></p>
</div>

<div style="margin-bottom:15px;">
    <input type="submit" value="ACEPTAR" class="btn btn-dark" id="btnRegistrar" />
    @Html.ActionLink("CANCELAR", "Index", "Region", new { area = "" }, new { @class = "btn btn-danger BotonCancelarFormulario" })    
</div>

<div class="alert alert-danger" role="alert" style="display:none" id="ErrorOperacionRegion">
    <h4 class="alert-heading">ERROR!!</h4>
    <p>ERROR EL CAMPO NO PUEDE ESTAR VACIO. COMPLETE EL CAMPO!!!</p>
    <hr>
</div>
